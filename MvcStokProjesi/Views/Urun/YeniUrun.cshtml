@model MvcStokProjesi.Models.Entity.Urunler
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı:</label>
        <input type="text" class="form-control" name="UrunAdi" required="" maxlength="50" placeholder="Ürün Adı"/>
    </div>
    <div>
        <label>Marka :</label>
        <input type="text" class="form-control" name="Marka" required="" placeholder="Buraya Markayı Yazınız."/>
    </div>
    <div>
        <label>Kategori Seçiniz :</label>
        @Html.DropDownListFor(m => m.Kategoriler.KategoriId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Fiyat :</label>
        <input type="text" class="form-control" name="Fiyat" />
    </div>
    <div>
        <label>Stok :</label>
        <input type="text" class="form-control" name="Stok" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>

