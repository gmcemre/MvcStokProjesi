@using MvcStokProjesi.Models.Entity
@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Id</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Urunler urun in Model)
        {
            <tr>
                <th>@urun.UrunId</th>
                <td>@urun.UrunAdi</td>
                <td>@urun.Marka</td>
                <td>@urun.Kategoriler.KategoriAdi</td>
                <td>@urun.Fiyat</td>
                <td>@urun.Stok</td>
                <td><a href="~/Urun/Sil/@urun.UrunId" class="btn btn-danger">SİL</a></td>
                <td><a href="~/Urun/UrunGetir/@urun.UrunId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="~/Urun/YeniUrun" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

<script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.jqueryui.css" rel="stylesheet" />
@*<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />*@

<script>
    $('#tbl1').dataTable();
</script>