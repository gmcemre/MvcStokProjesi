@model MvcStokProjesi.Models.Entity.Kategoriler
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.KategoriId)
        @Html.TextBoxFor(x => x.KategoriId, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.KategoriAdi)
        @Html.TextBoxFor(x => x.KategoriAdi, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">KATEGORİ GÜNCELLE</button>
    </div>
}

